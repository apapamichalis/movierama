!!!
%html
   %head
      %title MovieRama
      = stylesheet_link_tag "movierama"
      = javascript_include_tag "movierama"
      = javascript_include_tag "application"
      = csrf_meta_tag
   %body
      .topbar
         .fill
         .container
            %table{:style => 'width: 100%;'}
               %tr
               %td 
                  %h1 MovieRama
                  
               -#%td{:style => 'text-align: right;'} Welcome, 
               - if  user_signed_in?
                  %td{:style => 'text-align: right;'} 
                     Welcome,
                     = link_to " #{current_user.name}", edit_user_registration_path
                     |
                     = (link_to "Logout", destroy_user_session_path, :method => :delete)
               - else
                  %td{:style => 'text-align: right;'} 
                     Welcome, Guest ||
                     = link_to "Sign up", new_user_registration_path 
                     |
                     = link_to "Login", new_user_session_path
               
      .container
         .content
         .page-header
            - if notice
               %p.alert.alert-success= notice
            - if alert
               %p.alert.alert-danger= alert
            = yield :header
         .row
            - if flash[:alert]
               .alert-message.error
               %p= flash[:alert]
            -# elsif flash[:notice]
               -# .alert-message.info
               -# %p= flash[:notice]
            .span10
               = yield
            .span4
               = yield :sidebar
               .block.notice
                  %h4 MovieRama

